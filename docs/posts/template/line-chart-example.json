{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic line chart example.",
  "autosize": "fit",
  "padding": 0,

  "data": [
    {
      "name": "table",
      "url": "/posts/template/line-chart-example-data.json"
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "point",
      "range": "width",
      "domain": {"data": "table", "field": "x"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table", "field": "y"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "c"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x"},
    {"orient": "left", "scale": "y"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "c"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "x", "field": "x"},
              "y": {"scale": "y", "field": "y"},
              "stroke": {"scale": "color", "field": "c"},
              "strokeWidth": {"value": 2}
            },
            "update": {
              "strokeOpacity": {"value": 1}
            },
            "hover": {
              "strokeOpacity": {"value": 0.5}
            }
          }
        }
      ]
    }
  ],

  "uom-toggles": {
    "toggle-groups": [
      {
        "name": "Transmission Dynamics",
        "toggles": [
          {
            "name": "Population Inputs",
            "description": "Size of population.",
            "type": "range"
          },
          {
            "name": "Population Inputs",
            "description": "Number of initial infections.",
            "type": "select"
          },
          {
            "name": "Basic Reproduction Number",
            "description": "Measure of contagiousness: the number of secondary infections each infected individual produces.",
            "type": "select"
          },
          {
            "name": "Transmission Times",
            "description": "Length of incubation period.",
            "type": "range"
          }
        ]
      },
      {
        "name": "Clinical Dynamics",
        "toggles": [
          {
            "name": "Basic Reproduction Number",
            "description": "Measure of contagiousness: the number of secondary infections each infected individual produces.",
            "type": "range"
          },
          {
            "name": "Transmission Times",
            "description": "Length of incubation period.",
            "type": "range"
          }
        ]
      }
    ]
  }
}
